{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testPathIgnorePatterns": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    ".next",
    ".nuxt",
    "out",
    "public"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!@nestjs/.*|@prisma/.*|nestjs-pino|pino-http)"
  ],
  "moduleNameMapper": {
    "^@database/prisma/(.*)$": "<rootDir>/src/database/prisma/$1",
    "^@src/(.*)$": "<rootDir>/src/$1",
    "^@account/(.*)$": "<rootDir>/src/account/$1",
    "^@auth/(.*)$": "<rootDir>/src/auth/$1",
    "^@transaction/(.*)$": "<rootDir>/src/transaction/$1"
  }
}